@model MoodTracker.Web.UI.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

    <div class="row form-small">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal public-form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="text-center">Forgot Password?</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    <input type="submit" class="btn btn-primary btn-lg" value="Email Link" />
                </div>
            </div>
        }
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
