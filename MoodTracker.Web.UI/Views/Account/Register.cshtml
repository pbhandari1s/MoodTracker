@model MoodTracker.Web.UI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

    <div class="row form-small">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal public-form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="text-center">Register a new account.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6">
                    <input type="submit" class="btn btn-lg btn-primary" value="Register" />
                </div>
            </div>
        }
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
