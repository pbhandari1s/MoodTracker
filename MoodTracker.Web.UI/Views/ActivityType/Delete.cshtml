@model MoodTracker.Entities.ViewModel.ActivityTypeViewModel

@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm("delete", "activitytype", FormMethod.Post, new { @class="form-big"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Type)
    <div class="form-horizontal">
        <div class="pageHeading">
            <h2>Activity Type</h2>
            <p class="confirmation">
                Are you sure you want to delete this?
            </p>
        </div>

        <div class="row form">
            <div class="col-lg-12">
                <div>
                    <u>@Html.Label("Activity Type")</u>
                </div>
                @Html.Label(Model.Type)
            </div>
        </div>

        <div class="form-action">
            <input type="submit" value="Delete" class="btn btn-primary btn-lg" />
            @Html.ActionLink("Cancel", "index", "activitytype", null, new { @class = "btn btn-secondary btn-lg" })
        </div>


        <div class="backAction">
            @Html.ActionLink("<< Back to Current List", "Index")
        </div>
    </div>
}